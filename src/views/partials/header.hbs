<header
  class="flex flex-col lg:flex-row items-center md:justify-between py-4 px-2 md:px-10 md:py-6 bg-transparent text-mocha border-b shadow-md shadow-mocha/25"
>
  <!-- Navigation -->
  <nav class="flex space-x-8 font-serif font-medium mb-3">
    <a
      href="/chocolates"
      class="hover:text-caramel transition-colors rounded-full focus:outline-none focus:text-caramel"
    >Chocolates</a>
    <a
      href="/about"
      class="hover:text-caramel transition-colors rounded-full focus:outline-none focus:text-caramel"
    >About</a>
    <a
      href="/contact"
      class="hover:text-caramel transition-colors rounded-full focus:outline-none focus:text-caramel"
    >Contact</a>
    {{#if session.isAdmin}}
      <a
        href="/users"
        class="hover:text-caramel transition-colors rounded-full focus:outline-none focus:text-caramel"
      >Users</a>
    {{/if}}
  </nav>

  <!-- Logo -->
  <div class="flex-1 text-center order-first md:order-2 mb-4">
    <a
      href="/"
      class="text-2xl md:text-4xl font-pacifico text-mocha hover:text-caramel rounded-full focus:outline-none focus:text-caramel transition-colors"
    >
      Chocolate Museum
    </a>
  </div>

  <!-- Login and Logout -->
  <div class="flex items-center space-x-10 order-last">
    {{#if session.isLoggedIn}}
      <span class="flex items-center space-x-6 font-serif font-medium">
        <span>Welcome, {{session.name}}</span>
        <a
          href="/logout"
          class="text-mocha hover:text-caramel focus:outline-none focus:text-caramel transition-colors rounded-full flex items-center space-x-2"
        >
          <i class="fas fa-sign-out-alt h-6 w-6"></i>
          <span>Logout</span>
        </a>
      </span>
    {{else}}
      <a
        href="/login"
        aria-label="Login"
        class="hover:text-caramel rounded-full focus:outline-none transition-colors focus:text-caramel flex items-center md:space-x-2"
      >
        <i class="fas fa-user h-6 w-7"></i>
        <span class="font-serif font-medium">Login</span>
      </a>

      <a
        href="/register"
        aria-label="Register"
        class="hover:text-caramel rounded-full focus:outline-none focus:text-caramel transition-colors flex items-center space-x-2"
      >
        <i class="fas fa-user-plus h-6 w-6"></i>
        <span class="font-serif font-medium">Register</span>
      </a>
    {{/if}}
  </div>
</header>