<footer class="bg-cocoa px-10 py-8 text-white mt-auto">
  <div
    class="flex flex-col md:flex-row justify-between items-center space-y-6 md:space-y-0"
  >
    <!-- Navigation -->
    <div class="flex space-x-6 text-beige font-bold">
      <a
        href="/chocolates"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >Chocolates</a>
      <a
        href="/about"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >About</a>
      <a
        href="/contact"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >Contact</a>
    </div>

    <!-- Social Media -->
    <div class="flex space-x-6 text-beige">
      <a
        href="https://facebook.com"
        target="_blank"
        aria-label="Facebook"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >
        <i class="fab fa-facebook fa-lg"></i>
      </a>
      <a
        href="https://instagram.com"
        target="_blank"
        aria-label="Instagram"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >
        <i class="fab fa-instagram fa-lg"></i>
      </a>
      <a
        href="https://twitter.com"
        target="_blank"
        aria-label="Twitter"
        class="hover:text-caramel focus:outline-none focus:text-caramel transition-colors"
      >
        <i class="fab fa-twitter fa-lg"></i>
      </a>
    </div>

    <!-- Copyright -->
    <div class="text-beige text-sm">
      <p>&copy; {{year}}, Chocolate Museum</p>
    </div>
  </div>
</footer>