<section class="flex items-center justify-center py-6 px-4 md:px-10 md:py-6">
  <div
    class="bg-white border border-gray-300 shadow-md md:shadow-xl md:rounded-lg p-8 max-w-lg w-full"
  >
    <h1 class="text-3xl font-serif text-cocoa mb-6 text-center">Log in</h1>
    <form action="/login" method="POST" id="form_login" class="space-y-4">
      <fieldset>
        <div class="space-y-4">
          <label class="block font-semibold text-mocha">
            Username:
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-caramel"
              required
            />
          </label>
          <label class="block font-semibold text-mocha">
            Password:
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-caramel"
              required
            />
          </label>
        </div>
      </fieldset>
      <button
        type="submit"
        class="w-full bg-mocha text-white font-bold py-2 rounded-lg focus:bg-wine focus:outline-none hover:bg-wine transition-colors"
      >
        Login
      </button>
    </form>
    {{#if error}}
      <div
        class="mt-4 bg-wine text-white text-center px-4 py-2 rounded-lg flex items-center justify-center"
        role="alert"
      >
        <span>{{error}}</span>
      </div>
    {{/if}}
  </div>
</section>