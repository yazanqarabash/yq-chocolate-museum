<section class="py-6 px-4 md:px-10 md:py-6 space-y-4">

    <div class="flex flex-col lg:flex-row items-center lg:items-start">
        <div class="flex-shrink-0 w-full md:w-1/2 lg:w-1/3 mb-6 md:mb-0">
            <img src="/img/{{base_image}}" alt="{{name}}"
                 class="border border-gray-300 shadow-md rounded-lg p-10 w-full h-full object-cover">
        </div>

        <div class="flex-1 lg:ml-12 space-y-6 p-8">
            <h1 class="text-3xl font-serif text-cocoa">{{name}}</h1>
            <p class="antialiased tracking-wide leading-relaxed text-lg text-mocha">{{description}}</p>

            <div class="flex items-center space-x-4 text-caramel">
                <span class="font-bold">Cocoa Content:</span>
                <span class="">{{cocoa_content}}%</span>
            </div>
            <h2 class="text-3xl font-serif text-cocoa mb-4">History</h2>
            <p class="antialiased tracking-wide text-mocha text-lg leading-relaxed">{{history}}</p>
        </div>
    </div>

    {{#if images}}
        <div class="p-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {{#each images}}
                    <img src="/img/{{this}}" alt="{{../name}} image"
                         class="border border-gray-300 shadow-md rounded-lg p-10 w-full h-48 object-cover">
                {{/each}}
            </div>
        </div>
    {{/if}}

    <div class="text-center">
        <a href="/chocolates"
           class="text-caramel focus:outline-none focus:text-wine font-semibold hover:text-wine transition-colors">
            &larr; Back to chocolates
        </a>
    </div>

</section>
