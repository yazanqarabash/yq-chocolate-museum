<section class="container mx-auto px-8 py-12 text-center">
  <h1 class="text-4xl font-serif text-cocoa mb-4">Oops! Something went wrong.</h1>

  <p class="text-lg text-mocha mb-6">{{message}}</p>

  {{#if status}}
    <p class="text-base text-gray-700">Error Code: {{status}}</p>
  {{/if}}

  <a
    href="/"
    class="bg-caramel text-white py-2 px-4 rounded-full hover:bg-wine transition-colors"
  >
    Back to Home
  </a>
</section>